function create_player()
	p={x=6,y=4,sprite=64,speed=50}
end

function player_movement()
	if (btnp(➡️)) p.x+=1
	if (btnp(⬅️)) p.x-=1
	if (btnp(⬇️)) p.y+=1
	if (btnp(⬆️)) p.y-=1	
end

function draw_player()	
	spr(p.sprite,p.x*4,p.y*4)
end
	
